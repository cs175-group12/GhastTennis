<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <About>
        <Summary>GhastTennis</Summary>
    </About>

    <ServerSection>
        <ServerHandlers>
            <FlatWorldGenerator generatorString="3;3*minecraft:bedrock;2;"/>
            <DrawingDecorator>
                    <DrawCuboid x1="0" y1="3" z1="7" x2="7" y2="7" z2="0" type="obsidian" />
                    <DrawCuboid x1="1" y1="3" z1="6" x2="6" y2="6" z2="1" type="air" />
                    <DrawCuboid x1="2" y1="3" z1="0" x2="5" y2="6" z2="0" type="air" />
                    <DrawEntity type="Ghast" x="3.5" y="4" z="3.5"/>
                </DrawingDecorator>
            <ServerQuitFromTimeUp timeLimitMs="30000"/>
            <ServerQuitWhenAnyAgentFinishes/>
        </ServerHandlers>
    </ServerSection>

    <AgentSection mode="Survival">
        <Name>GhastTennis Agent</Name>
        <AgentStart>
            <Placement x="3.5" y="3" z="-10"/>
        </AgentStart>
        <AgentHandlers>
            <DiscreteMovementCommands/>
        </AgentHandlers>
    </AgentSection>
</Mission>